{
  "buttons": {
    "beginCloze": {
      "action": "moveBegin",
      "beginWrap": "{{c[0-9]::",
      "endWrap": "}}",
      "style": {
        "keys": "ctrl+alt+shift+space"
      },
      "visible": false
    },
    "beginClozeInside": {
      "action": "moveBeginInside",
      "beginWrap": "{{c[0-9]::",
      "endWrap": "}}",
      "style": {
        "keys": "ctrl+alt+space"
      },
      "visible": false
    },
    "citation": {
      "action": "wrap2",
      "beginWrap": "<i><span style=\"font-size: 10pt;\">",
      "endWrap": "</span></i>",
      "style": {
        "icon": "quote.png",
        "tip": "Add citation styling - small font & italics"
      },
      "visible": true
    },
    "endCloze": {
      "action": "moveEnd",
      "beginWrap": "{{c[0-9]::",
      "endWrap": "}} ?",
      "style": {
        "keys": "ctrl+shift+space"
      },
      "visible": false
    },
    "endClozeInside": {
      "action": "moveEndInside",
      "beginWrap": "{{c[0-9]::",
      "endWrap": "}}",
      "style": {
        "keys": "ctrl+space"
      },
      "visible": false
    },
    "mnemonic": {
      "action": "wrap2",
      "beginWrap": "<div class=\"mnemonics\">",
      "endWrap": "</div>",
      "style": {
          "icon": "left_justify.png",
          "keys": "ctrl+alt+m",
          "tip": "Add mnemonic styling - left justify"
      },
      "visible": true
    },
    "uncloze": {
      "action": "unwrap",
      "beginWrap": "{{c[0-9]::",
      "endWrap": "}}",
      "style": {
        "icon": "uncloze.png",
        "keys": "ctrl+alt+u",
        "tip": "Remove cloze from area where cursor is"
      },
      "visible": true
    },
    "shuffle": {
      "action": "wrap2",
      "beginWrap": "<div class=\"shuffle\">",
      "endWrap": "</div>",
      "style": {
          "icon": "shuffle.png",
          "tip": "Shuffle images or lists"
      },
      "html": {
        "front": ["shuffle.html"],
        "back": ["shuffle.html"]
      },
      "visible": true
    }
  }
}
