{
  "buttons": {
    "beginCloze": {
      "action": "moveBegin",
      "beginWrap": "{{c[0-9]::",
      "endWrap": "}}",
      "style": {
        "keys": "ctrl+alt+shift+space"
      },
      "visible": false
    },
    "beginClozeInside": {
      "action": "moveBeginInside",
      "beginWrap": "{{c[0-9]::",
      "endWrap": "}}",
      "style": {
        "keys": "ctrl+alt+space"
      },
      "visible": false
    },
    "citation": {
      "action": "wrap",
      "beginWrap": "<i><span style=\"font-size: 10pt;\">",
      "endWrap": "</span></i>",
      "style": {
        "icon": "quote.png",
        "tip": "Add citation styling - small font & italics"
      },
      "visible": true
    },
    "endCloze": {
      "action": "moveEnd",
      "beginWrap": "{{c[0-9]::",
      "endWrap": "}} ?",
      "style": {
        "keys": "ctrl+shift+space"
      },
      "visible": false
    },
    "endClozeInside": {
      "action": "moveEndInside",
      "beginWrap": "{{c[0-9]::",
      "endWrap": "}}",
      "style": {
        "keys": "ctrl+space"
      },
      "visible": false
    },
    "justify": {
      "action": "wrap",
      "beginWrap": "<div class=\"centeredbox\"><div class=\"leftalign\">",
      "css": {
        "centeredbox": {
          "text-align": "center"
        },
        "leftalign": {
          "display": "inline-block",
          "text-align": "left"
        }
      },
      "endWrap": "</div></div>",
      "style": {
        "icon": "left_justify.png",
        "tip": "Justify text and center it"
      }
    },
    "uncloze": {
      "action": "unwrap",
      "beginWrap": "{{c[0-9]::",
      "endWrap": "}}",
      "style": {
        "icon": "uncloze.png",
        "keys": "ctrl+alt+u",
        "tip": "Remove cloze from area where cursor is"
      },
      "visible": true
    }
  }
}